<div class="main">
	<div class="container">
		<h1> Welcome to SLA Calculator page</h1>
		<p1> Use the calculator to calculate sequnetial and composite SLA <%= @team_number %></p1>

		<%= form_tag home_slacal_path, :method => 'POST' do %>
			<%= select_tag(:team_number, options_for_select([
				['1',1],
				['2',1],
				['3',1],
				['4',1],
				['5',1],
				['6',1],
				['7',1],
				['8',1],
				]), class:'form-control' ) %>
				<%=  submit_tag 'click team here sss' %>
				<%= @team_number %>

		<% end %>
	
	</div>
</div>