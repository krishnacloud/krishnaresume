<p id="notice"><%= notice %></p>

<h1>Grokkings</h1>

<table>
  <thead>
    <tr>
      <th>Topic</th>
      <th>Article</th>
      <th>Creationdate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grokkings.each do |grokking| %>
      <tr>
        <td><%= grokking.topic %></td>
        <td><%= grokking.article %></td>
        <td><%= grokking.creationdate %></td>
        <td><%= link_to 'Show', grokking %></td>
        <td><%= link_to 'Edit', edit_grokking_path(grokking) %></td>
        <td><%= link_to 'Destroy', grokking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

